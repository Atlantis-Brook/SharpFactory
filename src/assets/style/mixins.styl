/* 全局样式混合 */

@import './var.styl'

/* 下波浪边框盒子 */
wave-box($color = $main-bgcolor)
  background-color: $color
  position: relative
  border-radius: 12px 12px 0 0
  &::after
    content: ''
    position: absolute
    top: 100%
    left: 0
    width: 100%
    height: 24px
    margin-top: -12px
    background-image: radial-gradient(circle 24px at center , $color 51%, transparent 0%)
    background-size: 24px
    background-repeat: repeat-x

/* 按钮样式 */
button($first-color = $main-color-1, $second-color = $main-color-2, $bgcolor = $sub-bgcolor, $border-color = $font-color)
  display inline-block
  position relative
  background-color $first-color
  padding 6px 22px
  font-weight 700
  border-radius 20px
  cursor pointer
  outline none
  transition background-color .7s
  &:hover
    background-color $second-color
  &::before
    content ''
    position absolute
    top -4px
    left -4px
    height 100%
    width 100%
    border 2px solid $border-color
    border-radius 20px
  &::after
    content ''
    border-top 3px solid $bgcolor
    width 10px
    position absolute
    top -4px
    left 13px

/* 换页按钮 */
change-pages-btn($bg-color = $sub-bgcolor, $color = $font-color)
  display inline-block
  text-align center
  cursor pointer
  font-weight 700
  font-size 25px
  line-height 40px
  width 40px
  height 40px
  border-radius 20px
  background-color $bg-color
  color: $color